# Environment variables for HILMI API
# Copy this file to .env and update the values

# Database Configuration
# For local development, use PostgreSQL with these settings:
# DATABASE_URL="postgresql://username:password@localhost:5432/hilmiweb?schema=public"

# For production, use your actual database URL
DATABASE_URL="postgresql://your_user:your_password@your_host:5432/your_database"

# Clerk Configuration
NEXT_PUBLIC_CLERK_PUBLISHABLE_KEY=your_clerk_publishable_key
CLERK_SECRET_KEY=your_clerk_secret_key

# Clerk URLs
NEXT_PUBLIC_CLERK_SIGN_IN_URL=/sign-in
NEXT_PUBLIC_CLERK_SIGN_UP_URL=/sign-up
NEXT_PUBLIC_CLERK_AFTER_SIGN_IN_URL=/dashboard
NEXT_PUBLIC_CLERK_AFTER_SIGN_UP_URL=/dashboard

# Backend Configuration
PORT=3001
FRONTEND_URL=http://localhost:3000

# Webhook Secret
CLERK_WEBHOOK_SECRET=your_webhook_secret_here